doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Домашняя Библиотека
        link(rel='stylesheet', href='/stylesheets/add_edit_book.css')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
    body
        div.form-container
            h1 Добавить новую книгу
            form(action="/library/add" method="post")
                input(type="text" name="title", placeholder="Название книги" required)
                input(type="text" name="author", placeholder="Автор" required)
                input(type="date" name="publicationDate", placeholder="Год издания" required)
                button(type="submit") Добавить книгу
            form(action="/library" method="GET")
                button(type="submit") Отмена